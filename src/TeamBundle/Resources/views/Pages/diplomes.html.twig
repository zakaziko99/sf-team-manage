{% extends 'base.html.twig' %}

{% block title %}TeamManager: Our member's diplomes list{% endblock %}

{% block body %}
    <h1>Our Member's Diplomes List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Year</th>
                <th>Type</th>
                <th>Title</th>
                <th>Mention</th>
                <th>Member</th>
            </tr>
        </thead>
        <tbody>
            {% for diplome in diplomes %}
            <tr>
                <td>{{ diplome.year }}</td>
                <td>{{ diplome.diplome.diplome }}</td>
                <td><a href="{{ path('diplome', { id: diplome.id }) }}">{{ diplome.titre }}</a></td>
                <td>{{ diplome.mention }}</td>
                <td><a href="{{ path('member', { id: diplome.member.id }) }}">{{ diplome.member.name }}</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
